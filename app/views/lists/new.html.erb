<div class="container">
  <h1 class="title">Criar Nova Lista</h1>

  <%= form_with model: @list, local: true, class: "form" do |form| %>
    <div class="form-group">
      <%= form.label :name, "Nome da Lista", class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Criar Lista', class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Voltar', lists_path, class: "btn btn-secondary" %>
</div>
